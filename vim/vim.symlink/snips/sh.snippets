snippet #! "#!/usr/bin/env sh" b
#!/usr/bin/env sh
$0
endsnippet

snippet if "if _ then _" b
if $1; then
	$0
fi
endsnippet

snippet for "for _ in _ do _" b
for ${1:x} in ${2:words}; do
	$0
done
endsnippet

snippet case "case _ in _"
case ${1:word} in
	${2:pattern})
		$0
		;;
	*)
		;;
esac
endsnippet
